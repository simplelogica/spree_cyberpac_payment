<%
  cyberpac = payment_method.provider
  cyberpac_urls = {
    :notify_url => notify_cyberpac_url(@order),
    :confirm_url => confirm_cyberpac_url(@order),
    :cancel_url => cancel_cyberpac_url
  }
  order_data = @order.cyberpac_purchase_data.merge cyberpac_urls
  post_data = cyberpac.purchase_post_data(order_data)
%>

<%= form_tag cyberpac.purchase_redirect_url, :id => 'cyberpac-form' do |f| %>
  <% post_data.each do |key, value| %>
    <%= hidden_field_tag key, value %>
  <% end %>
  <%= submit_tag %>
<% end %>
